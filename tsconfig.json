{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "types": ["@types/node"],
        "module": "commonjs",
        "outDir": "dist"     ,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "suppressExcessPropertyErrors": true,
        "sourceMap": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
